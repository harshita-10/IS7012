@model DreamHome.Pages.Cities.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>City Details </h1>

<div>
    <h4>City</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City.CityName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.CityName)
        </dd>
    </dl>
</div>
@if (Model.City.Apartments.Any() == false)
{
    <div class="alert alert-info">No Apartments have been created. <a asp-page="/Apartments/create">Create Apartments</a></div> }
else
{
    <h4>Apartment Informtion</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.City.Apartments[0].ApartmentName)</th>
                <th>@Html.DisplayNameFor(model => model.City.Apartments[0].AvailabilityDate)</th>
                <th>@Html.DisplayNameFor(model => model.City.Apartments[0].MarketPrice)</th>


                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.City.Apartments)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ApartmentName)</td>
                    <td>@Html.DisplayFor(modelItem => item.AvailabilityDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.MarketPrice)</td>

                    
                </tr>
            }
        </tbody>
    </table>
}
<div>
    <a asp-page="./Edit" asp-route-id="@Model.City.CityId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
