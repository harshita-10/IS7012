@page
@model RecruitCatYadavha.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Company Details</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.PostionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.PostionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MinimumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MinimumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MaximumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MaximumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.OptionalStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.OptionalStartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.IndustryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.JobTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.JobTitle.Title)
        </dd>
    </dl>
</div>

@if (Model.Company.Candidates.Any() == false)
{
    <div class="alert alert-info">No candidates have been created. <a asp-page="/candidates/create">Create Candidates</a></div> }
else
{
    <h4>Bank Accounts</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].LastName)</th>
                <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].DateOfBirth)</th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Company.Candidates)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                   
                    <td><a asp-page="/bankaccounts/create" asp-route-id="@item.CandidateId">Details</a></td>
                </tr>
}
        </tbody>
    </table>
}


<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.CompanyId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
